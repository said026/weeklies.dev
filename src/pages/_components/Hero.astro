---
import PageTitleBlock from "~/components/PageTitleBlock.astro";
import PillLink from "./PillLink.astro";

const logos = [
	{ src: "logos/google", alt: "Google Logo", class: "py-1 -mb-1 md:-mb-2 lg:-mb-2.5" },
	{ src: "logos/microsoft", alt: "Microsoft Logo", class: "py-2" },
	{ src: "logos/nordvpn", alt: "NordVPN Logo", class: "py-1" },
	{ src: "logos/rokt", alt: "Rokt Logo", class: "py-2" },
	{ src: "logos/theguardian", alt: "The Guardian Logo", class: "py-1.5" },
	{ src: "logos/trivago", alt: "Trivago Logo", class: "py-1" },
]
---

<section class="landing-section relative overflow-x-hidden pt-14 sm:pt-20 lg:pt-32">
	<PillLink title="Our brand new blog here!" subtitle="Learn more" href="/blog/welcome" class="mb-8" />
	<PageTitleBlock
		lg
		body="Dive into a curated collection of weeklies covering a wide spectrum of developer languages, frameworks, and technologies. "
	>
		<h1
			slot="title"
			class="mb-10 max-w-[18ch] px-4 text-center font-raleway text-5xl/[1.1] font-semibold md:text-6xl/[1.1] lg:text-7xl/[1.1]"
		>
			Your go-to hub for developer weeklies
		</h1>
	</PageTitleBlock>

	<div class="mb-14 mt-8 flex w-full justify-center gap-6 sm:mb-16 md:mb-20 lg:mb-24 xl:mb-28">
		<a href="/weeklies" class="button button-white">
			Check weeklies
		</a>
	</div>
</section>

<style>
	section::before {
		@apply absolute z-blur;
		content: "";
		top: 0%;
		bottom: 10%;
		width: 150%;
		left: -25%;
		background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
		mask-image: radial-gradient(rgba(0, 0, 0, 0.45), transparent 70%);
	}
</style>
